<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/idMemories_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_shadow="true"
            app:civ_shadow_radius="2dp" />

        <TextView
            android:id="@+id/idProfileName"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Mashrafee Bin Murtaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/idMemoriesTitle"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Tour Cox's Bazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/idMemoriesDetails"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"

            android:text="@string/tour_cox_s_bazar_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/idMemories_img1"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView

                    android:id="@+id/idMemories_img2"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>





        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/idMemories_img3"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/idMemories_img4"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>





        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idMemories_Count_likes"
                android:textColor="@android:color/black"
                android:gravity="center"

                android:layout_weight="1"
                android:text="12 likes"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/idMemories_Count_Comments"
                android:textSize="15sp"
                android:textColor="@android:color/black"

                android:gravity="center"

                android:layout_weight="1"
                android:text="7 comments"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/idMemories_Count_Shares"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="2 share"
                android:layout_width="match_parent"
                android:layout_height="25dp"/>




        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="25dp">

                <Button
                    android:id="@+id/idMemories_like"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="Like"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="25dp">

                <Button
                    android:id="@+id/idMemories_comment"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="Comment"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="25dp">

                <Button
                    android:id="@+id/idMemories_share"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="Share"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>








        </LinearLayout>


    </LinearLayout>

</LinearLayout>